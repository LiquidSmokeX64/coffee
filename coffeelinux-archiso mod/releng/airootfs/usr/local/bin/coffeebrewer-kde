   cp /usr/local/bin/coffeebrewer-custom /mnt/usr/local/bin/
   cp /usr/local/bin/coffeebrewer-kde /mnt/usr/local/bin/
   cp /usr/local/bin/coffeebrewer-gnome /mnt/usr/local/bin/
   cp /usr/local/bin/coffeebrewer-cinnamon /mnt/usr/local/bin/
   cp /usr/local/bin/coffeebrewer-sway /mnt/usr/local/bin/
   arch-chroot /mnt chmod 755 /usr/local/bin/coffeebrewer-custom
   arch-chroot /mnt chmod 755 /usr/local/bin/coffeebrewer-kde
   arch-chroot /mnt chmod 755 /usr/local/bin/coffeebrewer-gnome
   arch-chroot /mnt chmod 755 /usr/local/bin/coffeebrewer-cinnamon
   arch-chroot /mnt chmod 755 /usr/local/bin/coffeebrewer-sway
   mkdir -p /mnt/usr/share/wallpapers/coffee/
   mkdir -p /mnt/usr/share/backgrounds/gnome/
   cp /opt/backgrounds/coffee/* /mnt/usr/share/wallpapers/coffee/
   cp /opt/backgrounds/coffee/* /mnt/usr/share/backgrounds/gnome/
   cp /opt/coffee-injector /mnt/opt/
   arch-chroot /mnt chmod 755 /opt/coffee-keeper
   cp /opt/coffee-keeper /mnt/opt/
   cp /opt/wallpaper-updater /mnt/opt/
   arch-chroot /mnt chmod 755 /opt/wallpaper-updater
   arch-chroot /mnt chmod 755 /opt/coffee-injector
   cp /opt/coffee-keeper.service /mnt/lib/systemd/system/
   arch-chroot /mnt systemctl enable coffee-keeper.service
   cp /opt/coffee-wallpapers.service /mnt/lib/systemd/system/
   arch-chroot /mnt systemctl enable coffee-wallpapers.service
   rm /mnt/usr/share/applications/steam-native.desktop
   rm /mnt/usr/share/applications/stoken-gui-small.desktop
  fi
  if [ "$branchpass00" = "stable" ]; then
  cp /opt/pacman-stable.conf /etc/pacman.conf
  fi
  if [ "$branchpass00" = "beta" ]; then
  cp /opt/pacman-stable.conf /etc/pacman.conf
  fi
  cp /opt/os-release /mnt/etc/
  cp /opt/lsb-release /mnt/etc/
fi

printf "%b" "\n Did the installer complete sussessfully? (Default: 1)\n"
printf "%b" "\n1 - yes\n"
printf "%b" "\n2 - no\n"
