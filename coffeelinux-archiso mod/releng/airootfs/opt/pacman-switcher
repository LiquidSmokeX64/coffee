#!/bin/sh

#Main Menu
while [ "$typecheck00" != "1" ] && [ "$typecheck00" != "2" ]; do
clear
printf "%b" "\n#### Coffee Linux Pacman Switcher Tool 1.0.5 ####\n"
printf "%b" "\n#### DO NOT RUN AS SUDO/ROOT ####\n"
printf "%b" "\nWhat type of pacman repo do you want? (Default: 1)\n"
printf "%b" "\n1 - Stable\n"
printf "%b" "\n2 - Testing\n"

read -r typecheck00
case $typecheck00 in
 1) printf "%b" "\nStable selected. Switching now..\n" ;;
 2) printf "%b" "\nUnstable selected. Switching now..\n" ;;
 *) printf "%b" "\nUnrecognized option, selecting default..\n" ;;
esac

clear

if [ "$typecheck00" = "1" ]; then
sudo rm /etc/pacman.conf
sudo cp /opt/pacman-stable.conf /etc/pacman.conf
sudo pacman -Syy
clear
printf "%b" "\nSwitched to stable repos successfully. Exiting program now..\n\n"
fi
if [ "$typecheck00" = "2" ]; then
sudo rm /etc/pacman.conf
sudo cp /opt/pacman-unstable.conf /etc/pacman.conf
sudo pacman -Syy
clear
printf "%b" "\nSwitched to unstable repos successfully. Exiting program now..\n\n"
fi
if [ "$typecheck00" != "1" ] && [ "$typecheck00" != "2" ]; then
typecheck00=1
sudo rm /etc/pacman.conf
sudo cp /opt/pacman-stable.conf /etc/pacman.conf
sudo pacman -Syy
clear
printf "%b" "\nSwitched repos successfully. Exiting program now..\n\n"
fi
done
